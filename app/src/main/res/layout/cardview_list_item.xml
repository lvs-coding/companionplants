<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_plants"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_plant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ail"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_plant_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/plant_name_height"
            android:textSize="@dimen/plant_name_text_size"
            android:textColor="@color/colorPlantNameText"
            android:gravity="center"
            android:layout_below="@+id/iv_plant"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorNeutral"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>